#include <math.h>
#include <stdio.h>

struct point{//use to save every point which inputed.
    double x;
    double y;
};

long double perimeter(struct point *x,int i);
long double area(struct point *x,int i);

int main()
{
    
    struct point point[10];
    long double sum=0,peri=0;
    int i=0;//save input
    
    while(scanf("%d",&i)!=EOF)
    {
    for (int j=0;j<i ; j++) {
        scanf("%lf %lf",&point[j].x,&point[j].y);
    }
    point[i]=point[0];
    sum=fabs(area(point,i));//calculate the area of polygon.
    peri=fabs(perimeter(point, i));//calculate polygon_perimeter
        
        
    printf("%.3Lf %.3Lf\n",sum,peri);
    }
    
    
    return 0;
        
}

long double area(struct point *x,int i)//calculate polygon_aera
{
    long double sum=0;
    for (int j=0; j<i; j++) {
        sum+=(x[j].x)*(x[j+1].y);
    }
    for (int j=0; j<i; j++) {
        sum-=(x[j].y)*(x[j+1].x);
    }
    
    return sum/2;
}

long double perimeter(struct point *x,int i)//calculate polygon_perimeter
{
    long double sum=0,buffer=0;
    for (int j=0; j<i; j++) {
        buffer=pow(x[j].x-x[j+1].x,2)+pow(x[j].y-x[j+1].y,2);
        sum+=sqrt(buffer);
    }
    return sum;
    
}

